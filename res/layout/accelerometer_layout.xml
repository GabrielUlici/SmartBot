<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tableLayout11"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_hixs"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accelerometer Data :"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    
        <TableRow>

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:text="@string/robot_accX"
                android:textColor="#FFFFFF" >
            </TextView>

            <TextView
                android:id="@+id/dataAccX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dots2"
                android:textColor="#00f000" >
            </TextView>

            <TextView
                android:id="@+id/textView31"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_marginLeft="20dip"
                android:text="@string/robot_roll"
                android:textColor="#FFFFFF" >
            </TextView>

            <TextView
                android:id="@+id/dataRoll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dots2"
                android:textColor="#00f000" >
            </TextView>
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:text="@string/robot_accY"
                android:textColor="#FFFFFF" >
            </TextView>

            <TextView
                android:id="@+id/dataAccY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dots2"
                android:textColor="#00f000" >
            </TextView>

            <TextView
                android:id="@+id/textView41"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginLeft="20dip"
                android:text="@string/robot_pitch"
                android:textColor="#FFFFFF" >
            </TextView>

            <TextView
                android:id="@+id/dataPitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dots2"
                android:textColor="#00f000" >
            </TextView>
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/textView311"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:text="@string/robot_accZ"
                android:textColor="#FFFFFF" >
            </TextView>

            <TextView
                android:id="@+id/dataAccZ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dots2"
                android:textColor="#00f000" >
            </TextView>
        </TableRow>

    </TableLayout>